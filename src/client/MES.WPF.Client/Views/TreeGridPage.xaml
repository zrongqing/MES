<Page x:Class="MES.WPF.Client.Views.TreeGridPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:MES.WPF.Client.ViewModels"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      mc:Ignorable="d"
      Title="MainWindow" Height="450" Width="700">
    <Page.Resources>
        <local:TreeGridViewModel x:Key="viewModel"/>
    </Page.Resources>
    <Grid DataContext="{StaticResource viewModel}" Width="680">
        <syncfusion:SfTreeGrid 
            Name="treeGrid"
            Margin="5"
            AutoExpandMode="RootNodesExpanded"
            AutoGenerateColumns="False"
            ChildPropertyName="ReportsTo"
            ColumnSizer="Auto"
            AllowEditing="True" 
            AllowFiltering="True" 
            AllowSorting="True"   
            SelectionMode="Extended"    
            HeaderRowHeight="25"
            ItemsSource="{Binding Employees}" 
            GridLinesVisibility="Both"
            HeaderLinesVisibility="Both"
            ParentPropertyName="ID"
            SelfRelationRootValue="-1">
            <syncfusion:SfTreeGrid.Columns>
                <syncfusion:TreeGridTextColumn HeaderText="First Name" Padding="0" MappingName="FirstName" />
                <syncfusion:TreeGridNumericColumn HeaderText="Employee ID" Padding="0" MappingName="ID" NumberDecimalDigits="0" />
                <syncfusion:TreeGridTextColumn HeaderText="Last Name" Padding="0" MappingName="LastName"  />
                <syncfusion:TreeGridTextColumn MappingName="Title" Padding="0" />
                <syncfusion:TreeGridCurrencyColumn MappingName="Salary" Padding="0" />
                <syncfusion:TreeGridNumericColumn HeaderText="Reports To" Padding="0" MappingName="ReportsTo" />
            </syncfusion:SfTreeGrid.Columns>
        </syncfusion:SfTreeGrid>
    </Grid>
</Page>
