<Page x:Class="MES.WPF.Client.Views.BusyIndicatorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MES.WPF.Client.ViewModels" 
		xmlns:Notification="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
        <Notification:SfBusyIndicator Header="Loading..."
										IsBusy="True" 
										AnimationType="ArrowTrack"
										ViewboxWidth="50" ViewboxHeight="200" >
			<Notification:SfBusyIndicator.HeaderTemplate>
                <DataTemplate >
                    <TextBlock Text="Loading..." TextAlignment="Center" FontSize="15" Width="100" />
                </DataTemplate>
            </Notification:SfBusyIndicator.HeaderTemplate>
        </Notification:SfBusyIndicator>
    </Grid>
</Page>
